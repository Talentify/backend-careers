{% extends 'base.html.twig' %}

{% block title %}Administração{% endblock %}

{% block body %}

<div class="wrapper">
    <h3>Lista de vagas</h3>
    <div class="list-group">
        {% for vaga in vagas %}
            <div class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{ vaga.title }}</h5>
                    <small>{{ vaga.salary|format_currency('USD') }}</small>
                </div>
                <p class="mb-1">{{ vaga.description }}</p>
                <small>{{ vaga.workplace }}</small>
            </div>
        {% endfor %}
        <br>
    </div>
    <hr>
    <a class="btn btn-primary" href="../vaga/new">+ Cadastrar Vaga</a>
</div>
{% endblock %}
